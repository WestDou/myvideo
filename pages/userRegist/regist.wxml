<view>
  <view class="login-icon">
    <image class="login-img" src='../resource/banner1.jpg' mode='widthFix'></image>
  </view>
  <view class="login-form">
    <form bindsubmit="doRegist">
      <!--账号-->
      <view class="inputView">
        <image class='nameImage' src='../resource/username.png'></image>
        <label class='loginLabel'>账号</label>
        <input name="username" class='inputText' placeholder='请输入账号'></input>
      </view>
      <view class='line'></view>
       <!--密码-->
      <view class="inputView">
        <image class='nameImage' src='../resource/password.png'></image>
        <label class='loginLabel'>密码</label>
        <input type="password"  name="password" class='inputText' placeholder='请输入密码'></input>
      </view>
    <!--按钮-->
      <view>
      <button class='registBtn' type='primary' form-type='submit'>注册</button>
      </view>
      <view>
      <button class='goLoginBtn' type='warn' bindtap='goLoginPage'>返回登录</button>
      </view> 
    </form>
  </view>

</view>